local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local localPlayer = Players.LocalPlayer

local aimlockEnabled = true
local aimKey = Enum.KeyCode.X

-- Prüft, ob der übergebene Spieler ein Gegner ist.
local function isEnemy(player)
    if localPlayer.Team and player.Team then
        return player.Team ~= localPlayer.Team
    end
    return true
end

-- Sucht den nächstgelegenen Gegner (nur Spieler, die nicht im selben Team sind)
local function getClosestEnemy()
    local closestDistance = math.huge
    local closestPlayer = nil
    if not (localPlayer.Character and localPlayer.Character:FindFirstChild("Head")) then
        return nil
    end
    local myHeadPos = localPlayer.Character.Head.Position

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= localPlayer and player.Character and player.Character:FindFirstChild("Head") and isEnemy(player) then
            local head = player.Character.Head
            local distance = (myHeadPos - head.Position).Magnitude
            if distance < closestDistance then
                closestDistance = distance
                closestPlayer = player
            end
        end
    end

    return closestPlayer
end

-- Richten die Kamera auf den Head des Zielspielers aus
local function aimlock()
    local target = getClosestEnemy()
    if target and target.Character and target.Character:FindFirstChild("Head") then
        local targetHead = target.Character.Head
        local camera = workspace.CurrentCamera
        camera.CFrame = CFrame.new(camera.CFrame.Position, targetHead.Position)
    end
end

-- Aimlock auslösen, wenn die Taste (X) gedrückt wird
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == aimKey then
        aimlock()
    end
end)

-- Optional: Kontinuierliches Zielausrichten (jeden Frame)
RunService.RenderStepped:Connect(function()
    if aimlockEnabled then
        aimlock()
    end
end)
